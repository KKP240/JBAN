        <div class="topic">แก้ไขสินค้า</div>

        <div class="add-container">
            <div class="left">
                <img id="previewImage" src="images/black-tshirt.jpg">
                <label for="editImage" class="btn-editimage">แก้ไขรูปภาพ</label>
                <input type="file" name="" id="editImage" accept="image/*" hidden>
            </div>

            <div class="right">
                <div class="product-name">
                    <label for="pName">ชื่อสินค้า</label>
                    <input type="text" name="" id="pName">
                </div>
                <div class="category-gender">
                    <div>เพศ</div>
                    <input type="checkbox" name="male" id="male"><label for="male">ชาย</label>
                    <input type="checkbox" name="female" id="female"><label for="female">หญิง</label>
                </div>
                <div class="category-type">
                    <label for="pType">ประเภท</label><br>
                    <input type="text" name="" id="pType">
                </div>
                <div class="describe">
                    <label for="pDescribe">คำอธิบาย</label>
                    <textarea name="" id="pDescribe"></textarea>
                </div>
                <div class="price">
                    <label for="pPrice">ราคา</label>
                    <input type="number" name="" id="pPrice" min="0">
                </div>
                
                <div class="details-container">
                    <div class="repeated-details">
                        <div class="color">
                            <label for="pColor">เลือกสี</label>
                            <select name="" id="pColor">
                                <option value="" selected style="color: gray;">-- เลือกสี --</option>
                                <option value="#000000">สีดำ</option>
                                <option value="#ffffff">สีขาว</option>
                            </select>
                        </div>
                        <div class="size">
                            <div class="size-details">
                                <label for="size-s">S</label>
                                <input type="text" id="size-s" placeholder="ใส่จำนวนสินค้า">
                            </div>
                            <div class="size-details">
                                <label for="size-m">M</label>
                                <input type="text" id="size-m" placeholder="ใส่จำนวนสินค้า">
                            </div>
                            <div class="size-details">
                                <label for="size-l">L</label>
                                <input type="text" id="size-l" placeholder="ใส่จำนวนสินค้า">
                            </div>
                            <div class="size-details">
                                <label for="size-xl">XL</label>
                                <input type="text" id="size-xl" placeholder="ใส่จำนวนสินค้า">
                            </div>
                            <div class="add-size">
                                +
                            </div>
                        </div>
                    </div>
